# =============================================================================
# Nimbus - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://nimbus:nimbus@localhost:5432/nimbus?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Authentication
NEXTAUTH_SECRET="generate-a-secret-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional - enable as needed)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# AZURE_AD_CLIENT_ID=""
# AZURE_AD_CLIENT_SECRET=""
# AZURE_AD_TENANT_ID=""

# App Configuration
NODE_ENV="development"
PORT=3000

# Encryption key for storing cloud credentials (generate with: openssl rand -hex 32)
ENCRYPTION_KEY="generate-a-64-char-hex-key"

# AWS Credentials (for direct API access — per-tenant credentials stored encrypted in DB)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="ap-south-1"

# AI (Anthropic Claude)
# ANTHROPIC_API_KEY=""

# CUR + Athena (Cost and Usage Reports — resource-level cost analysis)
# These are required only if CUR has been set up via deploy/scripts/aws-setup.sh
# ATHENA_DATABASE="athenacurcfn_nimbus_daily_cur"
# ATHENA_WORKGROUP="nimbus-finops"
# ATHENA_RESULTS_BUCKET="s3://nimbus-athena-results-ACCOUNT_ID/query-results/"
# CUR_TABLE_NAME="nimbus_daily_cur"

# Logging
LOG_LEVEL="debug"
